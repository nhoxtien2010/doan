
<div class="container">
  <div class="col-sm-6 col-md-4 col-md-offset-4 row">

    <form class="form-signin">
      <h2><%= t('devise.menu.login')%></h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email , t('devise.menu.email') %><br />
          <%= f.email_field :email, autofocus: true ,:class=> "form-control"%>
        </div>

        <div class="field">
          <%= f.label :password , t('devise.menu.password')%><br />
          <%= f.password_field :password, autocomplete: "off",:class=> "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <div class = "checkbox">
              <%= f.check_box :remember_me%>
              <%= f.label :remember_me , t('devise.menu.remember_me') %>
            </div>
          </div>
      <% end -%>

        <div class="actions">
          <%= f.submit t('devise.menu.login'), :class=> " btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      
    </form>
  </div>

</div> <!-- /container -->




