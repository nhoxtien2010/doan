<div class="container">
  <div class="col-sm-6 col-md-4 col-md-offset-4 row">

    <form class="form-singup">
    	<h2><%= t('devise.menu.forgot_pass')%></h2>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field">
			    <%= f.label :email , t('devise.menu.email')%><br />
			    <%= f.email_field :email, autofocus: true , :class=> "form-control"%>
			  </div>

			  <div class="actions">
			    <%= f.submit t('devise.menu.send_reset_pass') , :class => "btn btn-primary"%>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
		</form>
	</div>
</div>
