<div class="container">
  <div class="col-sm-6 col-md-4 col-md-offset-4 row">

    <form class="form-singup">

      <h2><%= t('devise.menu.sign_up')%></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email, t('devise.menu.email') %><br />
          <%= f.email_field :email, autofocus: true, :class=> "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password , t('devise.menu.password')%>
          <% if @validatable %>
          <em>(<%= @minimum_password_length.to_s()+' '+t('devise.menu.char_minimum')%>)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class=> "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, t('devise.menu.pass_confirm') %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off",:class=> "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit t('devise.menu.signed_up'), :class=> " btn btn-primary"  %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </form>
  </div>
</div>
